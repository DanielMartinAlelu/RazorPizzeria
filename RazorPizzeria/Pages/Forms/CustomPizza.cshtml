@page
@model RazorPizzeria.Pages.Forms.CustomPizzaModel
@{
}

<div class="text-center container">
	<h1>Create your own Pizza</h1>
	<form method="post" class="mx-auto mt-5 mb-5 px-5 pt-5 pb-5 rounded-5 alert-light col-4" style="text-align:left">
		<input type="text" asp-for="Pizza.PizzaName"  placeholder="Give your pizza a name.." />
		<br />
		<input type="checkbox" asp-for="Pizza.TomatoSauce" placeholder="Tomato sauce" /> Tomato sauce (£1)
		<br />
		<input type="checkbox" asp-for="Pizza.Cheese" placeholder="Cheese" /> Cheese (£1)
		<br />
		<input type="checkbox" asp-for="Pizza.Peperoni" placeholder="Peperoni" /> Peperoni (£2)
		<br />
		<input type="checkbox" asp-for="Pizza.Mushroom" placeholder="Mushroom" /> Mushroom (£2)
		<br />
		<input type="checkbox" asp-for="Pizza.Tuna" placeholder="Tuna" /> Tuna (£2)
		<br />
		<input type="checkbox" asp-for="Pizza.Pineapple" placeholder="Pineapple" /> Pineapple (£3)
		<br />
		<input type="checkbox" asp-for="Pizza.Ham" placeholder="Ham" /> Ham (£2)
		<br />
		<input type="checkbox" asp-for="Pizza.Beef" placeholder="Beef" /> Beef (£3)
		<br />
		<button class="btn btn-primary mt-1" type="submit">Order my Pizza</button>
	</form>
</div>